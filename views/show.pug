  body
    header.dxc-header.py-3
      .row.flex-nowrap.justify-content-between.align-items-center
        .col-4
          a.text-muted(href='#')
            img(src='/images/logo_dxc.jpg')
        .col-4.text-center
          h2 Details Employee
        .col-4.d-flex.justify-content-end.align-items-center
          a.btn.btn-sm.btn-outline-secondary(href='/') Sign out
    .container
      .row
        table.table.table-striped
          tbody
            tr
              td Name
              td <%=n.medicineName%>
            tr
              td Provider
              td <%=n.medicineProvider%>
            tr
              td Manufacturer
              td <%=n.medicineManufacturer%>
            tr
              td Price
              td <%=n.medicinePrice%>
            tr
              td ID medicines
              td <%=n._id%>
        a.btn.btn-info(href='/') Back To Home Page
        a.btn.btn-success(href='/employees/edit/<%=employee._id%>' style='margin-left: 10px;') Edit
        form(action='/employees/delete/<%=employee._id%>' style='margin-left: 10px;' method='post')
          button.btn.btn-danger(type='submit') Delete
