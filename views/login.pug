                            li
                                a(href='contact.html') Contact
                .icons
                    a.icons-btn.d-inline-block.js-search-open(href='#')
                        span.icon-search
                    a.icons-btn.d-inline-block.bag(href='cart.html')
                        span.icon-shopping-bag
                        span.number 2
                    a.site-menu-toggle.js-menu-toggle.ml-3.d-inline-block.d-lg-none(href='#')
                        span.icon-menu

    .site-section
        .container.login-container
        .row
            .col-md-6.login-form-1
            form(action='/login' method='POST')
                .form-group
                input.form-control(type='text', name='username' placeholder='Your username',id ="username")
                .form-group
                input.form-control(type='password' placeholder='Your Password *',  name="password" id="password" )
                .form-group
                input.btnSubmit(type='submit' value='Login')
                .form-group
                a.ForgetPwd(href='#') Forget Password?
                .col-md-6.login-form-2

